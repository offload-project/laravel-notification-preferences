{
    "name": "offload-project/laravel-notification-preferences",
    "description": "Manage and display user notification preferences in Laravel",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/offload-project/laravel-notification-preferences",
    "keywords": [
        "laravel",
        "notification",
        "preferences"
    ],
    "authors": [
        {
            "name": "Offload Project"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/notifications": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0"
    },
    "require-dev": {
        "larastan/larastan": "^3.8.1",
        "laravel/pint": "^1.26.0",
        "orchestra/testbench": "^9.15|^10.8",
        "pestphp/pest": "^3.0|^4.0",
        "pestphp/pest-plugin-laravel": "^3.0|^4.0"
    },
    "autoload": {
        "psr-4": {
            "OffloadProject\\NotificationPreferences\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OffloadProject\\NotificationPreferences\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "OffloadProject\\NotificationPreferences\\NotificationPreferencesServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "pest",
        "test-coverage": "pest --coverage",
        "analyse": "phpstan analyse --memory-limit=-1",
        "analyse-baseline": "phpstan analyse --memory-limit=-1 --generate-baseline",
        "pint": "vendor/bin/pint"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        },
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
